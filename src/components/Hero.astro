---
import SocialPill from '@components/SocialPill.astro'
import MailIcon from '@icons/MailIcon.astro'
import LinkedInIcon from '@icons/LinkedInIcon.astro'

import Profile from '@components/Profile.astro'
---

<div class='w-auto grid lg:grid-cols-[2fr_1fr] gap-12'>
  <div class=''>
    <div
      class='glass-bg order-1 max-h-[400px] max-w-[400px] object-contain overflow-hidden mb-4'
    >
      <Profile />
    </div>
    <h1 class='mb-4 text-6xl font-bold'>Bismark Arroyo</h1>
    <p
      class='mt-6 text-xl text-gray-800 dark:text-gray-300 [&>strong]:text-green-500 [&>strong]:font-semibold'
    >
      +3 years of experience <strong
        >specializing in JavaScript, React, and Next.js.</strong
      > As a self-taught professional, I am passionate about technology and continuous
      learning. <strong
        >I focus on building dynamic, scalable, and user-friendly web
        applications</strong
      >
      to help people and businesses succeed.
    </p>
    <nav class='flex flex-wrap gap-4 mt-8'>
      <SocialPill href='mailto:bis.arroyo@gmail.com'>
        <MailIcon class='size-4' />
        Contact me
      </SocialPill>
      <SocialPill href='https://www.linkedin.com/in/bisarroyo/'>
        <LinkedInIcon class='size-4' />
        LinkedIn
      </SocialPill>
    </nav>
  </div>
</div>
